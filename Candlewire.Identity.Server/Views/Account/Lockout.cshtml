@{
    ViewData["Title"] = "Locked out";
}

<div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3">
        <div class="card card-prompt">
            <div class="card-header">
                <h3 class="card-title">Account Locked</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <p>Your account has been locked. Please <a asp-controller="Account" asp-action="Forgot">click here to reset your password and unlock our account</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>