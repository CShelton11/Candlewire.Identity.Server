@model NicknameViewModel

@{ ViewData["Title"] = "Change nickname"; }
@{ Layout = "/Views/Shared/_Layout.cshtml"; }

<div class="nickname-page row">
    <div class="col-md-8 offset-md-2">
        <partial name="_ValidationSummary" />

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Update Nickname</h3>
                <div class="card-subtitle">Update your nickname</div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-8">
                            Tell us what you prefer to be called.
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Nickname"></label>
                                    @Html.EditorFor(a => a.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary col-xs-12 col-md-4 col-xl-4">Update Nickname</button>
                            <a asp-action="Profile" class="btn btn-secondary col-xs-12 col-md-4 col-xl-4">Profile Settings</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>