@model PasswordViewModel
@{ ViewData["Title"] = "Change password"; }
@{ Layout = "/Views/Shared/_Layout.cshtml"; }

<link rel="stylesheet" href="~/css/manage-password.css" />
<script type="text/javascript" src="~/js/manage-password.js"></script>

<div class="password-page row">
    <div class="col-md-8 offset-md-2">
        <partial name="_ValidationSummary" />

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Update Password</h3>
                <div class="card-subtitle">Changing passwords helps keep your account more secure</div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OldPassword" class="previous-label"></label>
                                <div class="input-group password-toggle">
                                    <input asp-for="OldPassword" class="form-control previous-field" />
                                    <div class="input-group-addon">
                                        <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NewPassword" class="password-label"></label>
                                <div class="input-group password-toggle">
                                    <input asp-for="NewPassword" class="form-control password-field" />
                                    <div class="input-group-addon">
                                        <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                                <div class="password-information">
                                    <div class="password-meter"><div class="password-progress"></div></div>
                                    <span class="password-strength"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <div class="input-group confirm-input-group">
                                    <input asp-for="ConfirmPassword" class="form-control confirm-field" />
                                    <span class="input-group-addon confirm-image" aria-hidden="true" title="Passwords match"><span class="fa fa-check-circle"></span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary col-xs-12 col-md-4 col-xl-4">Update Password</button>
                            <a asp-action="Security" class="btn btn-secondary col-xs-12 col-md-4 col-xl-4">Security Settings</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>