@model BirthdateViewModel

@{ ViewData["Title"] = "Change date of birth"; }
@{ Layout = "/Views/Shared/_Layout.cshtml"; }

<link rel="stylesheet" href="~/css/manage-birthdate.css" />
<script type="text/javascript" src="~/js/manage-birthdate.js"></script>

<div class="birthdate-page row">
    <div class="col-md-8 offset-md-2">
        <partial name="_ValidationSummary" />

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Update Date Of Birth</h3>
                <div class="card-subtitle">Update your birthdate after it was entered incorrectly</div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-8">
                            While it's rare, we understand that the wrong date is sometimes selected.  It is what it is...
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Birthdate"></label>
                                    <input asp-for="Birthdate" type="text" class="birth-date-field form-control" />
                                    <div class="row" style="width:0px;height:0px;padding:0px;margin:0px;border:0px;font-size:0px;overflow:hidden;"><input type="text" class="birth-date-hidden" /></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary col-xs-12 col-md-4 col-xl-4">Update Date</button>
                            <a asp-action="Profile" class="btn btn-secondary col-xs-12 col-md-4 col-xl-4">Profile Settings</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>